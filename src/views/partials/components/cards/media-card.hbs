<li id="card-{{ card.id }}">
    <div class="p-4 border border-solid border-emerald-500 rounded aspect-[4/3] bg-white
        hover:border-emerald-600 hover:text-emerald-600
        flex flex-col justify-center items-center relative text-center
        dark:bg-gray-700 dark:border-emerald-700 dark:text-emerald-50
        dark:hover:text-emerald-100"
    >
        <h3 class="text-md font-bold">{{ card.title }}</h3>
        <p class="text-center">{{ card.description }}</p>

        <button class="w-8 h-8 absolute top-2 right-[48px] text-gray-500
            flex justify-center items-center rounded-[50%]
            cursor-pointer hover:bg-green-100 hover:text-green-500
            disabled:bg-gray-200 disabled:text-gray-500 disabled:cursor-not-allowed
            focus:outline-emerald-500
            dark:text-gray-300 dark:hover:bg-green-900 dark:hover:text-green-50"
            data-dialog-id="cardDialog"
            data-dialog-target="card-{{ card.id }}"
            hx-get="/components/cards/{{ card.id }}/edit"
            hx-swap="innerHTML"
            hx-target="#cardForm"
            hx-disabled-elt="this"
        >
            <svg width="16" height="16" viewBox="0 0 24 24">
                <path fill="currentColor" d="M22.987,5.452c-.028-.177-.312-1.767-1.464-2.928-1.157-1.132-2.753-1.412-2.931-1.44-.237-.039-.479,.011-.682,.137-.071,.044-1.114,.697-3.173,2.438,1.059,.374,2.428,1.023,3.538,2.109,1.114,1.09,1.78,2.431,2.162,3.471,1.72-2.01,2.367-3.028,2.41-3.098,.128-.205,.178-.45,.14-.689Z"/>
